<html>
    <%- include('./partials/head.ejs') %>
    <%- include('./partials/header.ejs') %>
        <div id="carouselAutoplaying" class="carousel slide carousel-fade" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="bg-image carousel-item active" data-bs-interval="5000">
                    <div class="overlay-img" style="background-image: url('../Image/Louvre-from haut.jpg');"></div>
                    <div class="main-title">
                        <h1 class="position-absolute top-50 start-50 translate-middle text-center">WELCOME TO THE ART JOURNEY</h1>
                    </div>
                </div>
                <div class="carousel-item" data-bs-interval="3000">
                    <div class="overlay-img" style="background-image: url('../Image/Louvre-inside-1.jpg')"></div>
                    <!-- <img src="Image/Louvre-inside-1.jpg" class="carousel-img d-block w-100 img-fluid" alt="Inside of Louvre Museum"> -->
                    <div class="carousel-caption d-none d-md-block mask" style="background-color: rgba(0, 0, 0, 0.6)">
                        <div class="d-flex flex-column justify-content-center h-100">
                            <h5 class="text-white mb-0">Exploring today</h5>
                        </div>
                    </div>
                </div>
                <div class="carousel-item" data-bs-interval="3000">
                    <div class="overlay-img" style="background-image: url('../Image/Louvre1.jpg')"></div>
                    <!-- <img src="Image/Louvre1.jpg" class="carousel-img d-block width-100 img-fluid" alt="Inside of Louvre Museum"> -->
                    <div class="carousel-caption d-none d-md-block mask" style="background-color: rgba(0, 0, 0, 0.6)">
                        <div class="d-flex flex-column justify-content-center h-100">
                            <h5>Keep your memories</h5>
                        </div>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselAutoplaying" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselAutoplaying" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    <%- include('./partials/footer.ejs') %>
</html>
