<html>
    <%- include('./partials/head.ejs') %>
    <%- include('./partials/header.ejs') %>
    <div class="container-fluid mt-5 d-flex flex-column align-items-center justify-content-center">
        <div class="row my-5 p-5 gt-5">
            <div class="col-md-6 text-center">
                <!-- Button trigger modal -->
                <a role="button" data-toggle="modal" data-target="#modal">
                    <img class="img-fluid rounded-start" src="<%=art.img%>" alt="<%=art.title%>'s image">
                </a>
                <!-- xxxxxxxxxxxxxxxx -->
            </div>
            <div class="col-md-6">
                <div class="container mt-5 ms-2">
                    <h5><%=art.title%>, <span class="text-secondary"><%=art.dateCreated%></span></h5>
                    <!-- Vote form -->
                    <div class="d-flex justify-content-start align-items-center">
                        <form action="/arts/<%=art._id%>/vote" method="POST">
                            <button class="btn btn-sm btn-link" type="submit"><i class="bi bi-heart-fill border border-light-subtle rounded p-2" style="font-size: 20px; color: #ffc2d1"></i></button>
                        </form>
                        <% if (art.votes !==0) {%>
                            <p><%=art.votes%></p>
                        <%}%>
                    </div>
                    <!-- xxxxxxxxxxxxxxxx -->
                    <h6><%=art.artist%>, <span class="text-secondary font-italic"><%=art.artistBio%></span></h6>
                    <p><%=art.description%></p>
                    <p><%=art.museum%></p>
                    <div class="mt-3 d-flex justify-content-start align-items-center">
                        <form action="/arts/<%=art._id%>/add" method="POST">
                            <input class="btn btn-warning btn-sm" type="submit" value="ADD" />
                        </form>
                    </div>
                    <!-- 'The art is already added to your collection.' -->
                    <% if(typeof message!== 'undefined') {%>
                        <p class="text-danger-emphasis"><%=message%></p> 
                    <%}%>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="modal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="container d-flex justify-content-end">
                    <button class="btn-close" data-dismiss="modal" data-target="#modal"></button>
                </div>
                <img class="card-img-top" data-mdb-img="<%=art.img%>" class="w-100" src="<%=art.img%>" alt="<%=art.title%>'s image">
            </div>
        </div>
    </div>
    <!-- xxxxxxxx -->
    <%- include('./partials/footer.ejs') %>
</html>
