<html>
    <%- include('./partials/head.ejs') %>
    <%- include('./partials/header.ejs') %>
    <div class="container mt-5 mb-5 p-5">
        <div class="card text-center m-5">
            <img class="card-img-top" src="<%=art.img%>" alt="<%=art.title%>'s image">
            <div class="card-body"> 
                <p class="card-title"><%=art.title%></p>
                <p class="card-text"><%=art.artist%> (<%=art.artistBio%>)</p>
                <p class="card-text"><%=art.dateCreated%></p>
                <p class="card-text"><%=art.description%></p>
                <p class="card-text"><%=art.museum%></p>
                <div class="d-flex justify-content-center align-items-center">
                    <a href="/arts/<%=art._id%>/edit" class="btn btn-primary btn-sm btn-margin" role="button">EDIT</a>
                    <form class="my-0" action="/arts/<%=art._id%>?_method=DELETE" method="POST">
                        <input class="btn btn-warning btn-sm" type="submit" value="DELETE" />
                    </form>
                </div>
            </div>
        </div>
    </div>
    <%- include('./partials/footer.ejs') %>
</html>
