<%- include('../partials/head.ejs') %>   
<%- include('../partials/header.ejs') %>
<div class="container mt-5 mb-5 py-5">
    <h1 class="text-center mb-5">Log in</h1>
    <form class="d-flex flex-column align-items-center" action="/sessions" method="POST">
        <div class="form-group row mb-2">
            <label class="col-form-label col-auto" for="username">Username</label>
            <div class="col-auto">
                <input class="form-control" type="text" name="username" id="username" />
            </div>
        </div>
        <div class="form-group row mb-2">
            <label class="col-form-label col-auto" for="password">Password</label>
            <div class="col-auto">
                <input class="form-control" type="text" name="password" id="password" />
            </div>
        </div>
        <div class="mt-5 d-flex justify-content-center align-items-center">
            <input type="submit" class="btn btn-primary btn-margin" value="Log in">
        </div>
    </form>
</div>
<%- include('../partials/footer.ejs') %>
</html>
