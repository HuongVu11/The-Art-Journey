<html>
    <%- include('../partials/head.ejs') %>
    <%- include('../partials/header.ejs') %>
    <div class="container mt-5 mb-5 py-5">
        <h1 class="mb-5 text-center">Add a new art</h1>
        <form nonvalidate action="/users/arts" enctype="multipart/form-data" method="POST">
            <div class="form-group row mb-2">
                <label class="col-sm-2 col-form-label" for="title">Title</label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" name="title" id="title" required/>
                </div>
                <div class="invalid-feedback">
                    Please add a title.
                  </div>
            </div>
            <div class="form-group row mb-2">
                <label class="col-sm-2 col-form-label" for="img">Image</label>
                <div class="col-sm-10">
                    <input class="form-control" type="file" name="img" id="img" required/>
                </div>
            </div>
            <div class="form-group row mb-2">
                <label class="col-sm-2 col-form-label" for="artist">Artist</label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" name="artist" id="artist" />
                </div>
            </div>
            <div class="form-group row mb-2">
                <label class="col-sm-2 col-form-label" for="artistBio">Artist Biography</label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" name="artistBio" id="artistBio" />
                </div>
            </div>
            <div class="form-group row mb-2">
                <label class="col-sm-2 col-form-label" for="dateCreated">Created Date</label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" name="dateCreated" id="dateCreated" />
                </div>
            </div>
            <div class="form-group row mb-2">
                <label class="col-sm-2 col-form-label" for="description">Description</label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" name="description" id="description" />               
                </div>
            </div>
            <div class="form-group row mb-2">
                <label class="col-sm-2 col-form-label" for="category">Category</label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" name="category" id="category" />                
                </div>
            </div>
            <div class="form-group row mb-2">
                <label class="col-sm-2 col-form-label" for="museum">Museum</label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" name="museum" id="museum" />                
                </div>
            </div>
            <div class="form-group row mb-2">
                <label class="col-sm-2 col-form-label" for="tags">Tags</label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" name="tags" id="tags" />
                </div>
            </div>
            <div class="mt-5 d-flex justify-content-center align-items-center">
                <input type="submit" class="btn btn-primary btn-margin" value="Add">
                <a class="btn btn-primary" role="button" href="/users/arts">Cancel</a>
            </div>
        </form>
    </div>
    <%- include('../partials/footer.ejs') %>
</html>
