<html>
    <%- include('../partials/head.ejs') %>
    <%- include('../partials/header.ejs') %>
    <div class="container-fluid mt-5 d-flex flex-column align-items-center">
        <div class="row my-5 p-5 gt-5">
            <div class="col-md-6 text-center">
            <!-- Button trigger modal -->
                <a role="button" data-toggle="modal" data-target="#modal">
                    <img class="img-fluid" src="<%=art.img%>" alt="<%=art.title%>'s image">
                </a>
            </div>
            <!-- xxxxxxxxxxxxxxxx -->
            <div class="col-md-6">
                <div class="container mt-5 ms-2">
                    <h5><%=art.title%> <span class="text-secondary"><%=art.dateCreated%></span></h5>
                    <h6><%=art.artist%> <span class="text-secondary font-italic"><%=art.artistBio%></span></h6>
                    <p><%=art.description%></p>
                    <p><%=art.museum%></p>
                    <% if(art.tags[0] !== ""){ %>
                        <p class="card-text">Tags:<% for (const tag of art.tags) {%>
                            <span> <%=tag%>,</span>
                        <% } %></p> 
                    <%}%>
                    <div class="mt-4 d-flex justify-content-start align-items-center">
                        <a href="/users/arts" class="btn btn-secondary btn-sm btn-margin" role="button">BACK</a>
                        <a href="/users/arts/<%=art._id%>/edit" class="btn btn-primary btn-sm btn-margin" role="button">EDIT</a>
                        <form class="my-0" action="/users/arts/<%=art._id%>?_method=DELETE" method="POST">
                            <input class="btn btn-warning btn-sm" type="submit" value="DELETE" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="modal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="container d-flex justify-content-end">
                    <button class="btn-close" data-dismiss="modal" data-target="#modal"></button>
                </div>
                <img class="card-img-top" data-mdb-img="<%=art.img%>" class="w-100" src="<%=art.img%>" alt="<%=art.title%>'s image">
            </div>
        </div>
    </div>
    <!-- xxxxxxxx -->
    <%- include('../partials/footer.ejs') %>
</html>