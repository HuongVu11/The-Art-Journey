<html>
<%- include('../partials/head.ejs') %>   
<%- include('../partials/header.ejs') %>
<div class="container mt-5 pt-5 d-flex justify-content-center align-items-center">
    <div class="card shadow justify-content-center align-items-center mt-5 p-5">
        <h2 class="card-title mb-4">Create new account</h2>
        <div class="card-body">
            <form nonvalidate action="/users" method="POST">
                <div class="form-group row mb-2">
                    <label class="col-form-label" for="username">Username</label>
                    <input class="form-control" type="text" name="username" id="username" required/>
                </div>
                <div class="form-group row mb-2">
                    <label class="col-form-label col-auto" for="password">Password</label>
                    <input class="form-control" type="password" name="password" id="password" required/>
                </div>
                <div class="form-group row mb-2 d-flex justify-content-end">
                    <input type="submit" class="btn btn-primary mt-4" value="Create">
                </div>
            </form>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs') %>
</html>
